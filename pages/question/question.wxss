/* pages/question/question.wxss */

.c_title_view {
  width: auto;
  background: #f5f5f5;
  padding: 15rpx;
}

.c_title_name {
  float: left;
  width: 100%;
  font-size: 33rpx;
  color: #0097fe;
}

.c_title_index {
  font-size: 30rpx;
}

.t_content {
  padding: 20rpx;
  font-size: 32rpx;
  margin-bottom: 50rpx;
}

.v_bottom {
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border: 1px solid;
}

.bottom_left {
  position: fixed;
  left: 20rpx;
  background: blue;
  font-size: 28rpx;
  color: #fff;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-radius: 10rpx;
}

.bottom_center {
  display: block;
  width: auto;
  margin: 0 auto;
}

.bottom_right {
  position: fixed;
  right: 20rpx;
  background: blue;
  font-size: 28rpx;
  color: #fff;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-radius: 10rpx;
}

/*录音  */

image {
  width: 150rpx;
  height: 150rpx;
}

.page-body {
  margin-bottom: 80rpx;
}

.page-body-wrapper {
  justify-content: space-between;
  flex-grow: 1;
  margin-bottom: 300rpx;
}

.page-body-time {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.time-big {
  font-size: 60rpx;
  margin: 20rpx;
}

.time-small {
  font-size: 30rpx;
}

.page-body-buttons {
  margin-top: 60rpx;
  display: flex;
  justify-content: space-around;
}

.page-body-button {
  width: 250rpx;
  text-align: center;
}

.button-stop-record {
  width: 110rpx;
  height: 110rpx;
  border: 20rpx solid #fff;
  background-color: #f55c23;
  border-radius: 130rpx;
  margin: 0 auto;
}
