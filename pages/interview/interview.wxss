/* pages/interview/interview.wxss */

swiper {
  width: 100%;
  height: 350rpx;
}

swiper image {
  display: block;
  width: 100%;
  height: 100%;
}

/*必须设置display:flex（块级别）。 否者设置方向无效*/

.item_view {
  display: flex;
  overflow: hidden;
  flex-direction: row;
  padding: 15rpx;
}


.item_image {
  width: 300rpx;
  height: 200rpx;
}

.item_title {
  margin-left: 10rpx;
  color: #0097FE;
  font-size: 40rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.item_content {
  position: relative;
  min-height: 90rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
  color: #0097FE;
  font-size: 35rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.person_num{
  margin-left: 10rpx;
  margin-top: 15rpx;
  font-size: 25rpx;
}

.price{
  margin-left: 100rpx;
  margin-top: 15rpx;
  font-size: 25rpx;
  color: red;
}