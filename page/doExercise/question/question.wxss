/* pages/question/question.wxss */

.c_title_view {
  width: auto;
  background: #f5f5f5;
  padding: 15rpx;
}

.c_title_name {
  float: left;
  width: 100%;
  font-size: 33rpx;
  color: #0097fe;
}

.c_title_index {
  font-size: 30rpx;
}

.t_content {
  padding: 20rpx;
  font-size: 32rpx;
  margin-bottom: 50rpx;
}

.issuesContent {
  padding: 20rpx;
  font-size: 32rpx;
  margin-bottom: 80rpx;
  height: 700rpx;
}

/* fiexd 固定定位  */

.header {
  background: #f5f5f5;
  position: fixed;
  top: 300rpx;
}

.v_bottom {
  background: gray;
  position: fixed;
  bottom: 0rpx;
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
}

.bottom_left_right {
  width: 20%;
  height: 80rpx;
  justify-content: center;
  text-align: center;
}

.bottom_center {
  width: 60%;
  justify-content: center;
  text-align: center;
}

.text {
  font-size: 30rpx;
  color: blue;
}

/* 滑块（显示隐藏）  */

.imgController {
  width: 100rpx;
  height: 60rpx;
}

.issueItem {
  margin-left: 25rpx;
}

/*录音  */

image {
  width: 150rpx;
  height: 150rpx;
}

.page-body {
  bottom: 180rpx;
  position: fixed;
  display: flex;
}

.page-body-wrapper {
  justify-content: space-between;
  flex-grow: 1;
  margin-bottom: 300rpx;
}

.page-body-time {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.time-big {
  font-size: 60rpx;
  margin: 20rpx;
}

.time-small {
  font-size: 30rpx;
}

.page-body-buttons {
  margin-top: 60rpx;
  display: flex;
  justify-content: space-around;
}

.page-body-button {
  width: 250rpx;
  text-align: center;
}

.button-stop-record {
  width: 110rpx;
  height: 110rpx;
  border: 20rpx solid #fff;
  background-color: #f55c23;
  border-radius: 130rpx;
  margin: 0 auto;
}
